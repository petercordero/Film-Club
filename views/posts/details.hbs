<div class="center">
<h2>{{title}}</h2>
<div>
  <p>{{content}}<p>
  <br>
  <h4>Rating: {{rating}}/10</h4>
  <h4>Posted by {{author.username}} 📽️</h4>
</div>

<img class="movie-posters" src="{{imageUrl}}" alt="poster">
<br>
<a href="/posts/edit/{{_id}}">Edit Review</a>
<a href="/posts/delete/{{_id}}">Delete Review</a>

<h3>Comments</h3>
<br>
{{#unless comments}}
  <p>No comments yet!</p> 
{{/unless}}

{{#each comments}}
  <p><b>{{this.author.username}}:</b> {{this.content}}</p>
{{/each}}

<hr>

<h3>Add comment</h3>

<form action="/comments/posts/comment/{{_id}}" method="post">

  <input type="text" name="postAuthor" value="{{author.username}}" hidden />
  <textarea name="content" cols="30" rows="2"></textarea>

  <button type="submit">Comment</button>
</form>

<br>
<a href="/users/posts/{{author._id}}">See all of {{author.username}}'s posts</a>
</div>
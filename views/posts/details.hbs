{{!-- posts/details.hbs --}}

<h2>{{title}}</h2>
<div>
  <h4>{{content}}</h4>
  <br>
  <h5>posted by {{author.username}} 📽️</h5>
</div>

<img class="movie-posters" src="{{imageUrl}}" alt="film">

<a href="/posts/edit/{{_id}}">Edit Review</a>
<a href="/posts/delete/{{_id}}">Delete Review</a>

{{#unless comments}}
  <p>No comments yet!</p> 
{{/unless}}

{{#each comments}}
  <p><b>{{this.author.username}}:</b> {{this.content}}</p>
{{/each}}

<hr>

<h3>Add comment</h3>

<form action="/posts/comment/{{_id}}" method="post">
  <label> Your username:
    <input type="text" name="author" />
  </label>

  <input type="text" name="postAuthor" value="{{author.username}}" hidden />
  <textarea name="content" cols="30" rows="2"></textarea>

  <button type="submit">Comment</button>
</form>

<br>
<a href="/users/posts/{{author._id}}">See all {{author.username}}'s posts</a>

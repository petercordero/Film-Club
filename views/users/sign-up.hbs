<h2>Sign Up</h2>

<form action="/users/sign-up" method="POST">
  <label> Username:
    <input type="text" name="username" />
  </label>
  <br>

  <label>
      Password
      <input type="password" name="password"/>
    </label>

  <button type="submit"> Sign Up </button>
</form>

<div>
  {{#if message}}
    <p><b>{{message}}</b></p>
  {{/if}}
</div>
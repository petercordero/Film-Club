<div class="center">
  <br>
{{#if userInSession}}
  <h2>{{ userInSession.username }}'s Reviews</h2>
  {{else}}
<h2>{{author.username}}'s Reviews</h2>
{{/if}}
<br>
<ul>
 {{#each posts}}
    <li>
         <a href="/posts/details/{{this._id}}">{{ this.title }} ({{this.rating}}/10) by {{this.author.username}} 📽️ | {{this.now}}</a>   
    </li>
    <br>
  {{/each}}
</ul>
</div>
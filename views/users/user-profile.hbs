<div class="center">
{{#if userInSession}}
  <h2>Welcome, {{ userInSession.username }}!</h2>
  <p>Your reviews are listed below!</p>
  {{else}}
<h2>{{author.username}}'s Profile</h2>
{{/if}}

<ul>
 {{#each posts}}
    <li>
         <a href="/posts/details/{{this._id}}">{{ this.title }} by {{this.author.username}}</a>   
    </li>
  {{/each}}
</ul>
</div>